[
  {
    "name": "weather_service",
    "base_url": "https://api.weather.com/v1/current",
    "method": "POST",
    "headers": {
      "Authorization": "Bearer YOUR_API_KEY",
      "Content-Type": "application/json"
    },
    "timeout": 10,
    "response_format": "json",
    "response_path": "data.conditions",
    "fallback_response": "Sorry, I couldn't get the weather information right now.",
    "include_wildcards": true
  },
  {
    "name": "translation_service",
    "base_url": "https://api.translate.com/v1/translate",
    "method": "POST",
    "headers": {
      "Authorization": "Bearer YOUR_TRANSLATE_API_KEY",
      "Content-Type": "application/json"
    },
    "timeout": 15,
    "response_format": "json",
    "response_path": "translated_text",
    "fallback_response": "Translation service is currently unavailable.",
    "include_wildcards": false
  },
  {
    "name": "chatgpt_service",
    "base_url": "https://api.openai.com/v1/chat/completions",
    "method": "POST",
    "headers": {
      "Authorization": "Bearer YOUR_OPENAI_API_KEY",
      "Content-Type": "application/json"
    },
    "timeout": 30,
    "response_format": "json",
    "response_path": "choices.0.message.content",
    "fallback_response": "I'm sorry, the AI service is currently unavailable.",
    "include_wildcards": true
  },
  {
    "name": "simple_text_service",
    "base_url": "https://api.example.com/echo",
    "method": "GET",
    "headers": {
      "User-Agent": "Golem-AIML-Bot/1.0"
    },
    "timeout": 5,
    "response_format": "text",
    "fallback_response": "Service unavailable",
    "include_wildcards": false
  }
]
