# Golem Telegram Bot Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Telegram Bot Token (required)
# Get this from @BotFather on Telegram
# Format: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Enable verbose logging (true/false)
# Default: false
VERBOSE=false

# Timezone for the container
# Default: UTC
# Examples: America/New_York, Europe/London, Asia/Tokyo
TZ=UTC

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom AIML path (if not using the default testdata)
# Default: ./testdata (mounted as volume)
# AIML_PATH=/custom/path/to/aiml/files

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================

# Uncomment these if you want to enable monitoring services
# PROMETHEUS_ENABLED=true
# LOKI_ENABLED=true

# =============================================================================
# DOCKER COMPOSE PROFILES
# =============================================================================

# To run with monitoring services:
# docker-compose --profile monitoring up -d

# To run only the bot:
# docker-compose up -d
